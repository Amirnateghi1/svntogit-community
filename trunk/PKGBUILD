pkgname=jedit
pkgver=4.4.1
pkgrel=1
pkgdesc="Java based extensible text editor"
arch=('any')
url="http://www.jedit.org/"
license=('GPL')
depends=('sh' 'java-runtime' 'desktop-file-utils')
install=jedit.install
noextract=(${pkgname}${pkgver}install.jar)
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}${pkgver}install.jar 
	jedit-bin jedit.desktop)
md5sums=('db37bd993d2caa2bb87039f05478ef0e'
         'b31829a0cc606caf555d35458b501e03'
         '71546caddc1f6c4a8cb632af2d88cc83')

package() {
  cd "${srcdir}"

  java -jar ${pkgname}${pkgver}install.jar auto \
    "${pkgdir}/usr/share/java/${pkgname}/" \
    unix-script="${pkgdir}/usr/bin/" \
    unix-man="${pkgdir}/usr/share/man/man1"

  install -m755 "${srcdir}/jedit-bin" "${pkgdir}/usr/bin/jedit"
  install -Dm644 "${srcdir}/jedit.desktop" "${pkgdir}/usr/share/applications/jedit.desktop"
}

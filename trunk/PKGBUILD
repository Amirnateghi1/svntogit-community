# Maintainer: Antonio Rojas <arojas@archlinux.org>
# Contributor: Guillaume Duboc <guilduboc@gmail.com>

pkgname=jupyterlab_server
pkgver=0.3.2
pkgrel=1
pkgdesc="Launch an application built using JupyterLab"
arch=(any)
url="https://jupyter.org/"
license=(custom)
depends=(jupyter-notebook)
makedepends=(python-setuptools)
source=(https://pypi.io/packages/source/j/$pkgname/$pkgname-$pkgver.tar.gz)
sha256sums=('4c5a08db620170335656d6fe08354368da945580f4bb0c2c24eda6e9b2c4ea70')

build() {
  cd $pkgname-$pkgver
  python setup.py build 
}

package() {
  cd $pkgname-$pkgver
  python setup.py install --skip-build --root="$pkgdir" --optimize=1

  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

# Contributor: Jeff Mickey <j@codemac.net>
# Contributor: Dusty Phillips <dusty@buchuki.com>

pkgname=jedit
pkgver=4.3
pkgrel=2
pkgdesc="Java based extensible text editor"
arch=('any')
url="http://www.jedit.org/"
license=('GPL')
depends=('java-runtime')
source=(http://downloads.sourceforge.net/${pkgname}/${pkgname}${pkgver}install.jar \
	jedit-bin)
md5sums=('0b84a3f735e025c8909e9a63c291b7c3'
         '771cd959e2112cd2774f1d20de3afe79')

build() {
	cd ${srcdir}

	java -jar ${pkgname}${pkgver}install.jar auto ${pkgname} || return 1
	install -Dm755 ${srcdir}/${pkgname}/${pkgname}.jar \
		${pkgdir}/usr/share/java/${pkgname}/${pkgname}.jar || return 1
	mv ${srcdir}/${pkgname} ${pkgdir}/usr/share || return 1
	install -D -m755 ${srcdir}/${pkgname}-bin ${pkgdir}/usr/bin/${pkgname} || return 1 
}
